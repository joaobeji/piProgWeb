<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Cadastrar Modo de Preparo</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <style>
    .hidden { display: none; }
  </style>
</head>
<body>
  <div class="container mt-5">
    <h1 class="mb-4">Cadastrar Modo de Preparo</h1>
    <form action="/cadastrar-modo-preparo" method="POST">
      <div class="mb-3">
        <label for="comida_id" class="form-label">Selecione a Receita</label>
        <select class="form-select" id="comida_id" name="comida_id" required>
          <% comidas.forEach(comida => { %>
            <option value="<%= comida.id %>"><%= comida.titulo %></option>
          <% }) %>
        </select>
      </div>

      <div id="passo-container">
        <div class="passo mb-3">
          <label for="passo_numero" class="form-label">Número do Passo</label>
          <input type="number" class="form-control" name="passo_numero[]" required>
        </div>
        <div class="passo mb-3">
          <label for="descricao" class="form-label">Descrição do Passo</label>
          <textarea class="form-control" name="descricao[]" rows="2" required></textarea>
        </div>
      </div>

      <button type="button" class="btn btn-success mb-3" id="add-passo">Adicionar Novo Passo</button>
      <button type="submit" class="btn btn-primary">Cadastrar Modo de Preparo</button>
      <a href="./dashboard" class="btn btn-secondary">Voltar</a>
    </form>
  </div>

  <script>
    $(document).ready(function() {
      $('#add-passo').click(function() {
        // Cria novos campos de número do passo e descrição do passo
        const newPasso = `
          <div class="passo mb-3">
            <label for="passo_numero" class="form-label">Número do Passo</label>
            <input type="number" class="form-control" name="passo_numero[]" required>
          </div>
          <div class="passo mb-3">
            <label for="descricao" class="form-label">Descrição do Passo</label>
            <textarea class="form-control" name="descricao[]" rows="2" required></textarea>
          </div>
        `;
        $('#passo-container').append(newPasso);
      });
    });
  </script>
</body>
</html>
