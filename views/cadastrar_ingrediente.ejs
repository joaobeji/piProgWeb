<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Cadastrar Ingrediente</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
  <div class="container mt-5">
    <h1 class="mb-4">Cadastrar Ingrediente</h1>
    <form action="/cadastrar-ingrediente" method="POST">
      <div class="mb-3">
        <label for="comida_id" class="form-label">Selecione a Receita</label>
        <select class="form-select" id="comida_id" name="comida_id" required>
          <% comidas.forEach(comida => { %>
            <option value="<%= comida.id %>"><%= comida.titulo %></option>
          <% }) %>
        </select>
      </div>

      <div id="ingrediente-container">
        <div class="ingrediente mb-3">
          <label for="descricao" class="form-label">Descrição do Ingrediente</label>
          <input type="text" class="form-control" name="descricao[]" required>
        </div>
        <div class="ingrediente mb-3">
          <label for="quantidade" class="form-label">Quantidade</label>
          <input type="text" class="form-control" name="quantidade[]" required>
        </div>
        <div class="ingrediente mb-3">
          <label for="unidade" class="form-label">Unidade</label>
          <input type="text" class="form-control" name="unidade[]" required>
        </div>
      </div>

      <button type="button" class="btn btn-success mb-3" id="add-ingrediente">Adicionar Novo Ingrediente</button>
      <button type="submit" class="btn btn-primary">Cadastrar Ingrediente</button>
      <a href="./dashboard" class="btn btn-secondary">Voltar</a>
    </form>
  </div>

  <script>
    $(document).ready(function() {
      $('#add-ingrediente').click(function() {
        // Cria novos campos para descrição, quantidade e unidade
        const newIngrediente = `
          <div class="ingrediente mb-3">
            <label for="descricao" class="form-label">Descrição do Ingrediente</label>
            <input type="text" class="form-control" name="descricao[]" required>
          </div>
          <div class="ingrediente mb-3">
            <label for="quantidade" class="form-label">Quantidade</label>
            <input type="text" class="form-control" name="quantidade[]" required>
          </div>
          <div class="ingrediente mb-3">
            <label for="unidade" class="form-label">Unidade</label>
            <input type="text" class="form-control" name="unidade[]" required>
          </div>
        `;
        $('#ingrediente-container').append(newIngrediente);
      });
    });
  </script>
</body>
</html>
